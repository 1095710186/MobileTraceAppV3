<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

                                      xmlns:app="http://schemas.android.com/apk/res-auto"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:stretchMode="columnWidth"
                                      app:alignmentMode="alignBounds"
                                      app:columnCount="4"
                                      app:rowCount="4">

    <Button
        android:id="@+id/btn1"
        android:layout_height="@dimen/dimen_num_keyboard_height"
        android:gravity="center"
        android:text="1123123"
        android:textColor="#333333"
        app:layout_column="0"
        app:layout_row="0"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_height="@dimen/dimen_num_keyboard_height"
        android:layout_marginLeft="@dimen/dimen_num_keyboard_space"
        android:text="2"
        android:textColor="#333333"
        app:layout_column="1"


        app:layout_row="0"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_height="@dimen/dimen_num_keyboard_height"
        android:layout_marginLeft="@dimen/dimen_num_keyboard_space"
        android:gravity="center"
        android:text="3"
        android:textColor="#333333"
        app:layout_column="2"
        app:layout_row="0"
        />


    <Button
        android:id="@+id/btn_del"

        android:layout_height="@dimen/dimen_num_keyboard_height"
        android:layout_marginLeft="@dimen/dimen_num_keyboard_space"
        android:tag="del"
        android:textColor="#333333"
        app:layout_column="3"
        app:layout_row="0"


        />


</android.support.v7.widget.GridLayout>